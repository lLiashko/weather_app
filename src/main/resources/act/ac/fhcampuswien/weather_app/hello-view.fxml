<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="act.ac.fhcampuswien.weather_app.HelloController"
      alignment="CENTER" spacing="10" style="-fx-padding: 20;">

    <!-- TextField for entering a city name -->
    <TextField fx:id="cityTextField" promptText="Enter City Name" />
    <TextField fx:id="countryTextField" promptText="Enter Country Code" />

    <!-- Button to fetch the weather -->
    <Button text="Get Weather" onAction="#onGetWeatherButtonClick" />

    <!-- Labels for displaying weather data -->
    <Label fx:id="cityLabel" text="City: " />
    <Label fx:id="temperatureLabel" text="Temperature: " />
    <Label fx:id="humidityLabel" text="Humidity: " />
    <Label fx:id="descriptionLabel" text="Description: " />
</VBox>